<div class='container'>
  <div class='devise-bg callout'>
    <h2 class='is-size-2 has-text-centered font-white'>Log in</h2>
    <br />
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'label devise-style' %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
          </div>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label devise-style' %>
          <div class="control">
            <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
          </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field devise-style devise-flex">
          <%= f.check_box :remember_me, class: 'devise-check' %>
          <%= f.label :remember_me, class: 'devise-check' %>
        </div>
      <% end %>
      <br />
      <div class="actions">
        <%= f.submit "Log in", class: 'button' %>
      </div>
    <% end %>
    <div class='devise-flex'>
      <%= render "devise/shared/links", class: 'devise-links' %>
    </div>
  </div>
</div>
